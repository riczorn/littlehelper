<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" method="upgrade" client="administrator" >
	<name>mod_littlehelper</name>
	<author>Riccardo Zorn</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights
		reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt
	</license>
	<authorEmail>support@fasterjoomla.com</authorEmail>
	<authorUrl>www.fasterjoomla.com</authorUrl>
	<version>2.1.1</version>
	<description>MOD_LITTLEHELPER_XML_DESC</description>
	<files>
		<filename module="mod_littlehelper">mod_littlehelper.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<config>

		<fields addfieldpath="/administrator/components/com_littlehelper/elements/"
			name="params">
			<fieldset name="component" label="MOD_LITTLEHELPER_OPTIONS">
				<field title="MOD_LITTLEHELPER_INFO_TITLE" header="MOD_LITTLEHELPER_INFO_HEADER"
					body="MOD_LITTLEHELPER_INFO_BODY" footer="MOD_LITTLEHELPER_INFO_FOOTER"
					type="zzinfo" />

			</fieldset>

			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="hidden" value="0" />
			</fieldset>

		</fields>
	</config>
</extension>
