<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_system_littlehelper</name>
	<author>Riccardo Zorn</author>
	<creationDate>May 2011</creationDate>
	<copyright>Copyright (C) 2011-2013 Riccardo Zorn. All rights reserved.
	</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>support@fasterjoomla.com</authorEmail>
	<authorUrl>www.fasterjoomla.com</authorUrl>
	<version>2.0.20</version>
	<description>PLG_SYSTEM_LITTLEHELPER_XML_DESCRIPTION</description>
	<files>
		<filename plugin="littlehelper">littlehelper.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields addfieldpath="/administrator/components/com_littlehelper/elements/"
			name="params">
			<fieldset name="basic">
				<field title="PLG_LITTLEHELPER_INFO_TITLE" header="PLG_LITTLEHELPER_INFO_HEADER"
					body="PLG_LITTLEHELPER_INFO_BODY" footer="PLG_LITTLEHELPER_INFO_FOOTER"
					logo="/administrator/components/com_littlehelper/assets/images/logo.png" type="zzinfo" />
				<field name="markup" type="textarea" label="PLG_LITTLEHELPER_MARKUP" 
					description="PLG_LITTLEHELPER_MARKUP_DESC" rows="10" cols="55" filter="raw"/>
			</fieldset>
		</fields>
	</config>
</extension>
