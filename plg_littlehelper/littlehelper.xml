<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_system_littlehelper</name>
	<author>Riccardo Zorn</author>
	<creationDate>May 2011</creationDate>
	<copyright>Copyright (C) 2011-2013 Riccardo Zorn. All rights reserved.
	</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>support@fasterjoomla.com</authorEmail>
	<authorUrl>www.fasterjoomla.com</authorUrl>
	<version>2.3.1</version>
	<description>PLG_SYSTEM_LITTLEHELPER_XML_DESCRIPTION</description>
	<files>
		<filename plugin="littlehelper">littlehelper.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields addfieldpath="/administrator/components/com_littlehelper/elements/"
			name="params">
			<fieldset name="basic">
				<field title="PLG_LITTLEHELPER_INFO_TITLE" header="PLG_LITTLEHELPER_INFO_HEADER"
					body="PLG_LITTLEHELPER_INFO_BODY" footer="PLG_LITTLEHELPER_INFO_FOOTER"
					logo="/administrator/components/com_littlehelper/assets/images/logo.png" type="zzinfo" />
				<field name="admin_logo" type="radio" default="0" label="PLG_LITTLEHELPER_ADMIN_LOGIN" 
					description="PLG_LITTLEHELPER_ADMIN_LOGIN_DESC">
					<option value="0">PLG_LITTLEHELPER_ADMIN_LOGIN_DEFAULT</option>
					<option value="1">PLG_LITTLEHELPER_ADMIN_LOGIN_CUSTOM</option>
				</field>
				<field name="admin_custom_logo_login" type="media" label="PLG_LITTLEHELPER_ADMIN_LOGIN_CUSTOM_LOGO" 
					description="PLG_LITTLEHELPER_ADMIN_LOGIN_CUSTOM_LOGO_DESC" />

				<field name="admin_custom_logo_interface" type="media" label="PLG_LITTLEHELPER_ADMIN_INTERFACE_CUSTOM_LOGO" 
					description="PLG_LITTLEHELPER_ADMIN_INTERFACE_CUSTOM_LOGO_DESC" />

				
				<field name="markup" type="textarea" label="PLG_LITTLEHELPER_MARKUP" 
					description="PLG_LITTLEHELPER_MARKUP_DESC" rows="5" cols="75" filter="raw"/>
				<field name="markupadmin" type="textarea" label="PLG_LITTLEHELPER_MARKUPADMIN"  rows="5" cols="75" filter="raw" />
				<field name="clearcache" type="clearcache" label=""/>

			</fieldset>
		</fields>
	</config>
</extension>
